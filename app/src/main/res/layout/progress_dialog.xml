<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:background="@color/default_btn_text_color"
    android:paddingLeft="@dimen/default_margin_horizontal"
    android:paddingRight="@dimen/default_margin_horizontal"
    android:paddingTop="@dimen/default_margin_vertical"
    android:paddingBottom="@dimen/default_margin_vertical">

        <com.socialapp.utils.MaterialProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:enable_circle_background="false"
            app:progress_color="@color/default_control_activated_color"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="@dimen/progress_dialog_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_text_secondary"
            android:textColor="@color/default_control_activated_color"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/default_margin_horizontal"/>
    </LinearLayout>

