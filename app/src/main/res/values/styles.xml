<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/default_action_bar_color</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/default_primary_dark_color</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/default_control_colorAccent</item>


        <!-- You can also set colorControlNormal, colorControlActivated
            colorControlHighlight & colorSwitchThumbNormal. -->
        <item name="android:actionBarStyle">@style/CubeActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/CubeActionBarTabText</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CubeActionBar</item>
        <item name="actionBarTabTextStyle">@style/CubeActionBarTabText</item>

        <item name="android:tabWidgetStyle">@style/Widget.AppCompat.ActionBar.TabText</item>

        <!--  dialog style -->
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>

    </style>


    <style name="CubeActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/default_action_bar_color</item>
        <item name="android:titleTextStyle">@style/CubeActionBar.TitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="background">@color/default_action_bar_color</item>
        <item name="titleTextStyle">@style/CubeActionBar.TitleTextStyle</item>
    </style>

    <style name="CubeActionBar.TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/default_action_bar_text_color</item>
    </style>

    <style name="CubeActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/default_action_bar_text_color</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
